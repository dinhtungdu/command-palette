{
  "name": "snappy-command-palette",
  "version": "1.0.0",
  "description": "Bring power of text editor command palette to WordPress Admin.",
  "author": "Tung Du",
  "license": "GPL-3.0-or-later",
  "scripts": {
    "start": "npm install && composer install && composer dump-autoload && gulp",
    "dev": "gulp && gulp watch",
    "build": "gulp build",
    "build-release": "composer install --no-dev -o && gulp build && gulp release && composer install",
    "version": "gulp version && git add .",
    "format-scss": "prettier --write \"./assets/src/scss/**/*.scss\"",
    "format-js": "prettier-eslint --write --eslint-config-path=.eslintrc.js --config=.prettierrc \"./assets/src/js/**/*.js\"",
    "format-php": "composer run fix",
    "lint-js": "eslint assets/src/js; exit 0",
    "lint-scss": "stylelint assets/src/scss; exit 0",
    "lint-php": "composer run lint; exit 0"
  },
  "devDependencies": {
    "@babel/core": "^7.3.3",
    "@babel/preset-env": "^7.3.1",
    "@babel/register": "^7.0.0",
    "@wordpress/browserslist-config": "^2.2.3",
    "autoprefixer": "^9.4.7",
    "babel-eslint": "^10.0.1",
    "babelify": "^10.0.0",
    "beeper": "^1.1.1",
    "browser-sync": "^2.26.3",
    "browserify": "^16.2.3",
    "css-mqpacker": "^7.0.0",
    "del": "^3.0.0",
    "eslint": "^5.13.0",
    "eslint-config-wordpress": "^2.0.0",
    "eslint-plugin-babel": "^5.3.0",
    "fancy-log": "^1.3.3",
    "gulp": "^4.0.0",
    "gulp-buffer": "0.0.2",
    "gulp-cheerio": "^0.6.3",
    "gulp-copy": "^4.0.1",
    "gulp-csso": "^3.0.1",
    "gulp-eslint": "^5.0.0",
    "gulp-imagemin": "^5.0.3",
    "gulp-notify": "^3.2.0",
    "gulp-plumber": "^1.2.1",
    "gulp-postcss": "^8.0.0",
    "gulp-replace": "^1.0.0",
    "gulp-sass": "^4.0.2",
    "gulp-sort": "^2.0.0",
    "gulp-sourcemaps": "^2.6.5",
    "gulp-stylelint": "^8.0.0",
    "gulp-svgmin": "^2.1.0",
    "gulp-svgstore": "^7.0.1",
    "gulp-tap": "^1.0.1",
    "gulp-uglify": "^3.0.1",
    "gulp-wp-pot": "^2.3.4",
    "gulp-zip": "^4.2.0",
    "gulp.spritesmith": "^6.9.0",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.4",
    "node-sass": "^4.11.0",
    "prettier-eslint-cli": "^4.7.1",
    "stylelint": "^9.10.1",
    "stylelint-config-prettier": "^5.0.0",
    "stylelint-config-wordpress": "^13.1.0"
  },
  "dependencies": {},
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "assets/src/scss/**/*.scss": [
      "prettier --write",
      "stylelint",
      "git add"
    ],
    "assets/src/js/**/*.js": [
      "prettier-eslint --write --eslint-config-path=.eslintrc.js --config=.prettierrc",
      "eslint",
      "git add"
    ],
    "*.php": [
      "./vendor/bin/phpcbf --standard=WordPress -q",
      "git add"
    ]
  }
}
